
<% content_for :body do %>
	<div class="container">
		<div class="row main">
			find the hottest cities near <div id="city-spinner"><input type="text" id="city" placeholder="city name" /></div>
		</div>
		<div class="row results">
			<div id="results-spinner"></div>
			<div id="results-container" hidden>
				<div class="results-options row">
					<label for="sort-by">Sort by:</label>
					<select name="sort-by" id="sort-by">
						<option value="temp" selected>Temperature</option>
						<option value="distance">Distance</option>
					</select>
					<label for="order">Order by:</label>
					<select name="order-by" id="order-by">
						<option value="desc" selected>desc</option>
						<option value="asc">asc</option>
					</select>
				</div>
				<div class="results-content row">
				</div>
			</div>
		</div>
	</div>
<% end %>

<% content_for :bottom do %>
<script src="/javascripts/spin.min.js"></script>
<script type="text/javascript" src="/javascripts/mustache.js"></script>
<script src="/javascripts/scripts.js"></script>
<script type="text/template" id="weather-description">
  	<ul class="list-results">
  		{{#items}}
  		<li>
  			<h3>{{city.name}}, {{city.state}}<small> ({{city.distance}} km away)</small></h3>
  			<img src="http://img.weather.weatherbug.com/forecast/icons/localized/500x420/en/trans/{{icon}}.png" class="weather-icon" />
  			<span><strong>{{desc}}</strong>. {{#two_temps}}High: <span class="temp">{{high}}</span> &deg;<span class="unit">F</span>, Low: <span class="temp">{{low}}</span> &deg;<span class="unit">F</span>{{/two_temps}}{{#one_temp}}<span class="temp">{{temp}}</span> &deg;<span class="unit">F</span>{{/one_temp}}</span>
  			<p>{{pred}}</p>
  			<span>Links: <a href="{{maps}}" target="_blank">Google Maps</a> | <a href="{{wiki}}" target="_blank">Wikipedia</a></span>
  		</li>
  		{{/items}}
  	</ul>
</script>
<% end %>